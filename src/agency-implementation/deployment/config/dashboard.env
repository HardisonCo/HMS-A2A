# Unified Dashboard Environment Configuration
FLASK_APP=app.py
FLASK_ENV=production
PORT=8080
DEBUG=false

# Federation configuration
FEDERATION_GATEWAY_URL=http://federation-gateway:8010
FEDERATION_CLIENT_ID=dashboard
FEDERATION_CLIENT_SECRET=change_this_to_a_secure_secret_in_production

# Agency endpoints
CDC_API_URL=http://cdc-implementation:8001/api
EPA_API_URL=http://epa-implementation:8002/api
FEMA_API_URL=http://fema-implementation:8003/api

# Authentication
SECRET_KEY=change_this_to_a_secure_key_in_production
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# UI configuration
ENABLE_DARK_MODE=true
DEFAULT_VISUALIZATION=choropleth
REFRESH_INTERVAL=60000

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/dashboard/app.log