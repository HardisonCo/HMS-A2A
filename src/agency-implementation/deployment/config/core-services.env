# Core Services Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=agency_system
DB_USER=agency_admin
DB_PASSWORD=agency_secure_password

# API configuration
FOUNDATION_API_URL=http://foundation-api:8000
FOUNDATION_API_KEY=change_this_to_a_secure_api_key_in_production

# Service configuration
DETECTION_SERVICE_ENABLED=true
PREDICTION_SERVICE_ENABLED=true
NOTIFICATION_SERVICE_ENABLED=true
GENETIC_ANALYSIS_SERVICE_ENABLED=true
TRANSMISSION_ANALYSIS_SERVICE_ENABLED=true
VISUALIZATION_SERVICE_ENABLED=true
ADAPTIVE_SAMPLING_SERVICE_ENABLED=true

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/foundation/core-services.log