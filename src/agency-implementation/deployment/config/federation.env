# Federation Gateway Environment Configuration
NODE_ENV=production
PORT=8010
LOG_LEVEL=info

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=agency_system
DB_USER=agency_admin
DB_PASSWORD=agency_secure_password

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# Federation configuration
FEDERATION_ID=main-federation
FEDERATION_SECRET=change_this_to_a_secure_secret_in_production
FEDERATION_TOKEN_EXPIRATION=1h

# Participant agencies
AGENCY_CDC_ENDPOINT=http://cdc-implementation:8001/api
AGENCY_EPA_ENDPOINT=http://epa-implementation:8002/api
AGENCY_FEMA_ENDPOINT=http://fema-implementation:8003/api

# Security configuration
AUDIT_LOGGING_ENABLED=true
GOVERNANCE_CHECKS_ENABLED=true
DATA_ENCRYPTION_ENABLED=true

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/foundation/federation.log