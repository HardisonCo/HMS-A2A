# CDC Implementation Environment Configuration
NODE_ENV=production
PORT=8001
LOG_LEVEL=info

# Agency configuration
AGENCY_ID=cdc
AGENCY_NAME=Centers for Disease Control and Prevention
AGENCY_CONFIG_PATH=/app/config/agency.json

# API configuration
FOUNDATION_API_URL=http://foundation-api:8000
FOUNDATION_API_KEY=change_this_to_a_secure_api_key_in_production

# Federation configuration
FEDERATION_GATEWAY_URL=http://federation-gateway:8010
FEDERATION_CLIENT_ID=cdc
FEDERATION_CLIENT_SECRET=change_this_to_a_secure_secret_in_production

# Disease surveillance configuration
DISEASE_SURVEILLANCE_INTERVAL=15m
DISEASE_MODEL_VERSION=2.1.0
ENABLE_REAL_TIME_ALERTS=true

# Integration configuration
HMS_INTEGRATION_ENABLED=true
HMS_API_URL=https://hms-api.example.com
HMS_API_KEY=change_this_to_a_secure_api_key_in_production

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/cdc/api.log