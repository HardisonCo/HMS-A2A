# Foundation API Environment Configuration
NODE_ENV=production
PORT=8000
LOG_LEVEL=info

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=agency_system
DB_USER=agency_admin
DB_PASSWORD=agency_secure_password

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# JWT Authentication
JWT_SECRET=change_this_to_a_secure_secret_in_production
JWT_EXPIRATION=8h

# API rate limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Extensions configuration
ENABLE_EXTENSIONS=true
EXTENSIONS_DIR=/var/lib/foundation/extensions

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/foundation/api.log