# Notification System Environment Configuration
NODE_ENV=production
PORT=8020
LOG_LEVEL=info

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# Federation configuration
FEDERATION_GATEWAY_URL=http://federation-gateway:8010
FEDERATION_CLIENT_ID=notification-service
FEDERATION_CLIENT_SECRET=change_this_to_a_secure_secret_in_production

# Agency configuration
CDC_NOTIFICATION_ENDPOINT=http://cdc-implementation:8001/api/notifications
EPA_NOTIFICATION_ENDPOINT=http://epa-implementation:8002/api/notifications
FEMA_NOTIFICATION_ENDPOINT=http://fema-implementation:8003/api/notifications

# Notification channels
EMAIL_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=change_this_to_a_secure_smtp_password_in_production
EMAIL_FROM=notifications@example.com

WEBHOOK_ENABLED=true
DEFAULT_WEBHOOK_TIMEOUT=5000

SMS_ENABLED=false
SMS_API_KEY=change_this_to_a_secure_api_key_in_production

# Alert configuration
ALERT_THROTTLING_ENABLED=true
ALERT_THROTTLING_WINDOW=5m
ALERT_BUNDLING_ENABLED=true
ALERT_BUNDLING_WINDOW=15m

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/notifications/service.log