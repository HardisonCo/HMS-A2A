{
  "agency": {
    "name": "Environmental Protection Agency",
    "abbreviation": "EPA",
    "domain": "environmental_protection",
    "website": "https://www.epa.gov",
    "description": "The Environmental Protection Agency is a United States federal government agency whose mission is to protect human and environmental health."
  },
  "services": {
    "environmental_monitoring": {
      "enabled": true,
      "data_refresh_interval": 1800,
      "alert_threshold": 0.80,
      "monitoring_categories": [
        "air_quality",
        "water_quality",
        "soil_contamination",
        "radiation",
        "noise"
      ],
      "data_sources": [
        "state_monitoring_networks",
        "industry_emissions_reports",
        "satellite_imagery",
        "citizen_science_data"
      ]
    },
    "pollution_detection": {
      "enabled": true,
      "detection_interval": 3600,
      "confidence_threshold": 0.75,
      "pollution_types": [
        "chemical",
        "biological",
        "radiological",
        "particulate_matter",
        "greenhouse_gases"
      ]
    },
    "compliance_management": {
      "enabled": true,
      "compliance_check_frequency": 86400,
      "enforcement_actions": [
        "warning",
        "citation",
        "fine",
        "operation_suspension"
      ],
      "regulation_categories": [
        "clean_air_act",
        "clean_water_act",
        "safe_drinking_water_act",
        "toxic_substances_control",
        "resource_conservation"
      ]
    },
    "impact_assessment": {
      "enabled": true,
      "assessment_update_frequency": 604800,
      "assessment_types": [
        "environmental_impact_statement",
        "environmental_assessment",
        "categorical_exclusion",
        "cumulative_impact_analysis"
      ]
    },
    "public_notification": {
      "enabled": true,
      "channels": [
        "email",
        "sms",
        "api_webhook",
        "airnow_api",
        "emergency_broadcast"
      ],
      "hazard_levels": [
        "good",
        "moderate",
        "unhealthy_sensitive",
        "unhealthy",
        "very_unhealthy",
        "hazardous"
      ]
    },
    "climate_analytics": {
      "enabled": true,
      "data_update_frequency": 86400,
      "analysis_types": [
        "trend_analysis",
        "climate_modeling",
        "emissions_forecasting",
        "impact_prediction"
      ]
    }
  },
  "extension_points": {
    "data_sources": {
      "air_quality_monitoring": {
        "type": "api_based",
        "config": {
          "api_url_template": "https://airquality.{{state}}.gov/api/v1/monitoring-data",
          "auth_method": "api_key",
          "refresh_interval": 1800
        }
      },
      "water_quality_database": {
        "type": "database",
        "config": {
          "connection_string_env": "EPA_WATER_DB_CONNECTION",
          "query_timeout": 30,
          "batch_size": 1000
        }
      },
      "satellite_imagery": {
        "type": "api_based",
        "config": {
          "api_url": "https://satellite.imagery.gov/api/v2/imagery",
          "auth_method": "oauth2",
          "refresh_interval": 7200
        }
      },
      "emissions_reports": {
        "type": "file_based",
        "config": {
          "directory_path": "/data/emissions",
          "file_pattern": "*.csv",
          "processing_interval": 3600
        }
      }
    },
    "predictive_models": {
      "pollution_dispersion": {
        "implementation": "gaussian_plume_model",
        "parameters": {
          "spatial_resolution": "1km",
          "temporal_resolution": "hourly",
          "include_weather": true,
          "include_topography": true
        }
      },
      "air_quality_prediction": {
        "implementation": "machine_learning_forecaster",
        "parameters": {
          "prediction_horizon": "72h",
          "update_frequency": "3h",
          "confidence_intervals": true,
          "include_historical_patterns": true
        }
      }
    },
    "notification_channels": {
      "emergency_broadcast": {
        "implementation": "ipaws_adapter",
        "config": {
          "api_endpoint": "https://ipaws.fema.gov/api/broadcast",
          "credentials_env": "EPA_IPAWS_CREDENTIALS",
          "retry_attempts": 3
        }
      },
      "airnow_api": {
        "implementation": "airnow_notification_service",
        "config": {
          "api_endpoint": "https://airnow.gov/api/alerts",
          "credentials_env": "EPA_AIRNOW_KEY",
          "retry_attempts": 3
        }
      }
    },
    "visualization_components": {
      "pollution_heatmap": {
        "implementation": "interactive_geospatial_heatmap",
        "parameters": {
          "map_provider": "mapbox",
          "interpolation_method": "inverse_distance_weighted",
          "color_scheme": "RdYlGn_r"
        }
      },
      "emissions_trend_chart": {
        "implementation": "time_series_chart",
        "parameters": {
          "chart_type": "line",
          "include_projections": true,
          "aggregation_level": "daily"
        }
      }
    }
  },
  "integrations": {
    "state_environmental_agencies": {
      "federation_enabled": true,
      "partner_onboarding_workflow": "manual_approval",
      "data_sharing_agreements_required": true,
      "schema_validation": true
    },
    "noaa_weather_data": {
      "endpoint": "https://api.weather.gov/data",
      "auth_method": "api_key",
      "data_format": "json",
      "sync_interval": 3600
    },
    "usgs_water_data": {
      "endpoint": "https://waterdata.usgs.gov/nwis/uv",
      "auth_method": "none",
      "data_format": "xml",
      "sync_interval": 7200
    },
    "hms_api": {
      "enabled": true,
      "endpoint": "${HMS_API_ENDPOINT}",
      "auth_token_env": "HMS_API_TOKEN",
      "services": [
        "data_exchange",
        "alert_distribution",
        "reporting"
      ]
    }
  }
}